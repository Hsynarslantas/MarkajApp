@model UpdateTeamDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <h2 class="mt-4 mb-4">Takım Güncelle</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="TeamId" />

        <div class="form-group mb-3">
            <label asp-for="Name">Takım İsmi</label>
            <input class="form-control" asp-for="Name" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="LogoUrl">Logo</label>
            <textarea class="form-control" asp-for="LogoUrl" rows="5"></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CoachName">Teknik Direktör</label>
            <input class="form-control" asp-for="CoachName" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Point">Puan</label>
            <input class="form-control" asp-for="Point" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Win">Galibiyet</label>
            <input class="form-control" asp-for="Win" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Draw">Beraberlik</label>
            <textarea class="form-control" asp-for="Draw" rows="3"></textarea>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Lose">Mağlubiyet</label>
            <textarea class="form-control" asp-for="Lose" rows="3"></textarea>
        </div>


        <button type="submit" class="btn btn-success">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>

