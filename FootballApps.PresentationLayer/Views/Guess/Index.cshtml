@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<!-- CSS Files -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/soccer-master/fonts/icomoon/style.css">
<link rel="stylesheet" href="~/soccer-master/css/bootstrap/bootstrap.css">
<link rel="stylesheet" href="~/soccer-master/css/jquery-ui.css">
<link rel="stylesheet" href="~/soccer-master/css/owl.carousel.min.css">
<link rel="stylesheet" href="~/soccer-master/css/owl.theme.default.min.css">
<link rel="stylesheet" href="~/soccer-master/css/jquery.fancybox.min.css">
<link rel="stylesheet" href="~/soccer-master/css/bootstrap-datepicker.css">
<link rel="stylesheet" href="~/soccer-master/fonts/flaticon/font/flaticon.css">
<link rel="stylesheet" href="~/soccer-master/css/aos.css">
<link rel="stylesheet" href="~/soccer-master/css/style.css">

<div class="site-section bg-dark text-white" id="prediction-bot">
    <div class="container">
        <div class="row">
            <div class="col-12 title-section text-center">
                <h2 class="heading text-white">⚡ ChatGPT Tahmin Robotu</h2>
                <p class="mb-4">Yapay zekadan maç tahmini almak için takımların adını yaz!</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card bg-secondary text-white shadow p-4 rounded">
                    <form asp-controller="Guess" asp-action="Ask" method="post">
                        <div class="form-group">
                            <label for="message">Takımlar</label>
                            <input type="text"
                                   name="message"
                                   id="message"
                                   class="form-control"
                                   placeholder="Örnek: Galatasaray - Fenerbahçe maçı tahmini"
                                   required />
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary py-3 px-4">Tahmin Al</button>
                        </div>
                    </form>
                    @if (ViewBag.UserMessage != null)
                    {
                        <div class="mt-4">
                            <h5 class="text-info">📩 Soru:</h5>
                            <p>@ViewBag.UserMessage</p>
                        </div>
                    }
                    @if (ViewBag.BotReply != null)
                    {
                        <div class="mt-3">
                            <h5 class="text-warning">🤖 ChatGPT Tahmini:</h5>
                            <p>@ViewBag.BotReply</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript Files -->
