@model UpdateCommentDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mt-4 mb-4">Blog Güncelle</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="CommentId" />

        <div class="form-group mb-3">
            <label asp-for="NameSurname">İsim Soyisim</label>
            <input class="form-control" asp-for="NameSurname" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email">Email</label>
            <textarea class="form-control" asp-for="Email" rows="5"></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Subject">Konu</label>
            <input class="form-control" asp-for="Subject" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Body">Mesaj</label>
            <input class="form-control" asp-for="Body" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="BlogId">Blog Id</label>
            <input class="form-control" asp-for="BlogId" />
        </div>
        <button type="submit" class="btn btn-success">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>

