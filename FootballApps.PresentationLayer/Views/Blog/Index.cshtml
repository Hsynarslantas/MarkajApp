
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/soccer-master/css/bootstrap/bootstrap.css">
    <link rel="stylesheet" href="~/soccer-master/css/jquery-ui.css">
    <link rel="stylesheet" href="~/soccer-master/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/soccer-master/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/soccer-master/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="~/soccer-master/css/jquery.fancybox.min.css">

    <link rel="stylesheet" href="~/soccer-master/css/bootstrap-datepicker.css">

    <link rel="stylesheet" href="~/soccer-master/fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="~/soccer-master/css/aos.css">

    <link rel="stylesheet" href="~/soccer-master/css/style.css">



</head>

<body>

    <div class="site-wrap">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>
        <header class="site-navbar py-4" role="banner">
        </header>

        <div class="hero overlay"
             style="background-image: url('@Url.Content("~/soccer-master/images/bg_3.jpg")');">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-5 mx-auto text-center">
                        <h1 class="text-white">Köşe Yazıları</h1>
                        <p>Futbolun nabzını tutan köşe yazılarımızla hem Türkiye hem dünya futbolunu yakından takip edin. Güncel maç analizleri, transfer yorumları, lig değerlendirmeleri ve uzman görüşleriyle futbolu farklı bir bakış açısıyla keşfedin..</p>
                    </div>
                </div>
            </div>
        </div>



        <div class="container site-section">
            <div class="row">
                <div class="col-6 title-section">
                    <h2 class="heading">Güncel Köşe Yazıları</h2>
                </div>
            </div>
            @await Component.InvokeAsync("_BlogAllBlogComponentPartial")

            <div class="row justify-content-center">
                <div class="col-lg-7 text-center">
                    <div class="custom-pagination">
                        <a href="#">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#">4</a>
                        <a href="#">5</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/soccer-master/js/jquery-3.3.1.min.js"></script>
    <script src="~/soccer-master/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/soccer-master/js/jquery-ui.js"></script>
    <script src="~/soccer-master/js/popper.min.js"></script>
    <script src="~/soccer-master/js/bootstrap.min.js"></script>
    <script src="~/soccer-master/js/owl.carousel.min.js"></script>
    <script src="~/soccer-master/js/jquery.stellar.min.js"></script>
    <script src="~/soccer-master/js/jquery.countdown.min.js"></script>
    <script src="~/soccer-master/js/bootstrap-datepicker.min.js"></script>
    <script src="~/soccer-master/js/jquery.easing.1.3.js"></script>
    <script src="~/soccer-master/js/aos.js"></script>
    <script src="~/soccer-master/js/jquery.fancybox.min.js"></script>
    <script src="~/soccer-master/js/jquery.sticky.js"></script>
    <script src="~/soccer-master/js/jquery.mb.YTPlayer.min.js"></script>
    <script src="~/soccer-master/js/main.js"></script>

</body>

</html>

