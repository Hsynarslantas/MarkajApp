@model List<ResultPlayerDto>
<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-6 title-section">
                <h2 class="heading">Yıldız Futbolcular / Videoları</h2>
            </div>
            <div class="col-6 text-right">
                <div class="custom-nav">
                    <a href="#" class="js-custom-prev-v2"><span class="icon-keyboard_arrow_left"></span></a>
                    <span></span>
                    <a href="#" class="js-custom-next-v2"><span class="icon-keyboard_arrow_right"></span></a>
                </div>
            </div>
        </div>


        <div class="owl-4-slider owl-carousel">
            @foreach(var item in Model)
            {
            <div class="item">
                <div class="video-media">
                        <img src="@item.PhotoUrl" style="height:340px;width:250px;object-fit:cover;" class="img-fluid">
                    <a href="@item.PlayerVideoUrl" class="d-flex play-button align-items-center" data-fancybox>
                        <span class="icon mr-3">
                            <span class="icon-play"></span>
                        </span>
                        <div class="caption">
                            <span class="meta">#@item.ShirtNumber / @item.Position</span>
                            <h3 class="m-0">@item.FullName</h3>
                        </div>
                    </a>
                </div>
            </div>
            }
        </div>

    </div>
</div>
