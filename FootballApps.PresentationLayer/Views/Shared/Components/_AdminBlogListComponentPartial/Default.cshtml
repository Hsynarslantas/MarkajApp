@model List<FootballApps.DtoLayer.Dtos.BlogDtos.ResultBlogDto>
@{
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Blog Listesi</h5>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Blog Resmi</th>
                                <th>Yazar</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td>@item.Title</td>
                                    <td><img src="@item.ImageUrl" style="width:50px;height:50px;" /></td>
                                    <td>@item.Writer</td>
                                    <td>
                                        <form asp-controller="AdminBlog" asp-action="Delete" method="post" onsubmit="return confirm('Silmek istediğinizden emin misiniz?');">
                                            <input type="hidden" name="blogId" value="@item.BlogId" />
                                            <button class="btn btn-danger btn-sm" type="submit">Sil</button>
                                        </form>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Update", "AdminBlog", new { id = item.BlogId })" class="btn btn-success btn-sm">Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
