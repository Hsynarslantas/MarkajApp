@model FootballApps.DtoLayer.Dtos.ContactCommentDtos.CreateContactCommentDto

<div class="col-lg-7">
    <form asp-controller="Contact" asp-action="Create" method="post">
        <div class="form-group">
            <input asp-for="NameSurname" class="form-control" placeholder="İsim Soyisim" />
        </div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
        </div>
        <div class="form-group">
            <input asp-for="Subject" class="form-control" placeholder="Konu" />
        </div>
        <div class="form-group">
            <textarea asp-for="Message" class="form-control" rows="10" placeholder="Yorumunuz..."></textarea>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary py-3 px-5" value="Gönder" />
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info mt-3">@TempData["Message"]</div>
        }
    </form>
</div>
