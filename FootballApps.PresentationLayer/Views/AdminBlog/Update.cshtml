@model UpdateBlogDto
@{
    ViewData["Title"] = "Blog Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mt-4 mb-4">Blog Güncelle</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="BlogId" />

        <div class="form-group mb-3">
            <label asp-for="Title">Başlık</label>
            <input class="form-control" asp-for="Title" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description">Açıklama</label>
            <textarea class="form-control" asp-for="Description" rows="5"></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ImageUrl">Blog Resmi URL</label>
            <input class="form-control" asp-for="ImageUrl" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Writer">Yazar</label>
            <input class="form-control" asp-for="Writer" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="WriterImageUrl">Yazar Resim URL</label>
            <input class="form-control" asp-for="WriterImageUrl" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="WriterDescription">Yazar Açıklama</label>
            <textarea class="form-control" asp-for="WriterDescription" rows="3"></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CreatedDate">Oluşturulma Tarihi</label>
            <input type="datetime-local" class="form-control" asp-for="CreatedDate" />
        </div>

        <button type="submit" class="btn btn-success">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
